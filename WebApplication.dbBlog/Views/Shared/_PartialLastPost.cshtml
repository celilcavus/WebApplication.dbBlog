@model _01_WebApplication.dbBlog.Entity.Entity.posts


<!-- Blog post-->
<div class="card mb-4">
    <a href="#!"><img class="card-img-top" src="https://dummyimage.com/850x350/dee2e6/6c757d.jpg" alt="..." /></a>
    <div class="card-body">
        <div class="small text-muted">@Model.created_at.ToShortDateString()</div>
        <h2 class="card-title h4">@Model.title</h2>
        <p class="card-text">@Model.content</p>
        <a class="btn btn-primary" href="/index/ReadMore/@Model.id">Read more →</a>
    </div>
</div>